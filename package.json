{
  "name": "context-composer-cli",
  "version": "0.1.0",
  "author": "Mike Bannister <notimpossiblemike@gmail.com>",
  "license": "MIT",
  "description": "Context Composer CLI",
  "type": "module",
  "bin": {
    "context-composer-next": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "nodemon --watch src/ --ext ts --exec tsup",
    "format": "prettier --write \"**/*.{js,mjs,jsx,ts,tsx,json,md,mdx,css,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "tag-composer": "latest",
    "tiktoken": "^1.0.21"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "tag-composer": "link:../../.local/share/pnpm/global/5/node_modules/tag-composer"
    }
  }
}
